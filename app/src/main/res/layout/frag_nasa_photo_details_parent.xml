<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.exercise.nasapictures.viewmodel.PhotosViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivNavBack"
            android:layout_width="@dimen/dimen_button_size"
            android:layout_height="wrap_content"
            android:onClick="@{v->viewModel.onImageViewBackClick()}"
            app:srcCompat="@drawable/ic_back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:padding="@dimen/dimen_padding_small"
            app:tint="@color/white"
            tools:tint="@color/black"
            android:elevation="@dimen/dimen_padding_small"
            android:layout_margin="@dimen/dimen_padding_large" />

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/vpPhotos"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnPrevious"
            style="@style/ButtonStyle"
            android:layout_margin="@dimen/dimen_margin_large"
            android:onClick="@{v->viewModel.onPreviousButtonClick()}"
            app:icon="@drawable/ic_arrow"
            android:rotation="180"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnNext"
            style="@style/ButtonStyle"
            android:layout_margin="@dimen/dimen_margin_large"
            android:onClick="@{v->viewModel.onNextButtonClick()}"
            app:icon="@drawable/ic_arrow"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>