<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.NasaHomeAppPre" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

    <style name="ButtonStyle" parent="Widget.MaterialComponents.ExtendedFloatingActionButton.Icon">
        <item name="android:layout_height">@dimen/button_size</item>
        <item name="android:layout_width">0dp</item>
        <item name="backgroundTint">?android:colorPrimary</item>
        <item name="cornerRadius">@dimen/margin_medium</item>
        <item name="iconGravity">textEnd</item>
        <item name="iconTint">@color/white</item>
        <item name="android:padding">@dimen/padding_small</item>
    </style>

    <style name="Theme.NasaHomeAppPre.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="TextTitle">
        <item name="android:textSize">@dimen/font_large</item>
        <item name="fontFamily">@font/opensans_bold</item>
        <item name="android:textColor">?android:colorPrimary</item>
        <item name="android:padding">@dimen/padding_medium</item>
    </style>

    <style name="TextViewTitleDetails" parent="TextTitle">
        <item name="android:textSize">@dimen/font_x_large</item>
    </style>

    <style name="TextViewSubTitle">
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="fontFamily">@font/opensans_bold</item>
        <item name="android:textSize">@dimen/font_medium</item>
        <item name="android:paddingStart">@dimen/padding_medium</item>
        <item name="android:paddingLeft">@dimen/padding_medium</item>
    </style>

    <style name="TextViewSubTitleDetails" parent="TextViewSubTitle">
        <item name="android:textSize">@dimen/font_large</item>
    </style>
</resources>